@model Pro2.View_Models.MasterContactUsInformationFullViewModel



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <form asp-action="Index" enctype="multipart/form-data" id="pristine-valid-example" novalidate method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="MasterContactUsInformationImageUrl" />
                        <div class="row">
                            <div class="col-xl-4 col-md-6">
                                <div class="form-group mb-3">
                                    <div class="form-group">
                                        <label asp-for="MasterContactUsInformationImageFile" class="control-label"></label>
                                        <input asp-for="MasterContactUsInformationImageFile" class="form-control" />
                                        <span asp-validation-for="MasterContactUsInformationImageFile" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-md-6">
                                <div class="form-group mb-3">
                                    <div class="form-group">
                                        <label asp-for="MasterContactUsInformationIdesc" class="control-label"></label>
                                        <input asp-for="MasterContactUsInformationIdesc" class="form-control" />
                                        <span asp-validation-for="MasterContactUsInformationIdesc" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-xl-4 col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="MasterContactUsInformationRedirect" class="control-label"></label>
                                    <input asp-for="MasterContactUsInformationRedirect" class="form-control" />
                                    <span asp-validation-for="MasterContactUsInformationRedirect" class="text-danger"></span>
                                </div>
                            </div>


                        </div>

                        <div class="form-group mb-3 form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                            </label>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Save" class="btn btn-primary" />
                            <a asp-action="index" asp-route-id="" class="btn btn-info">Clear</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <div class="col-12">
        <div class="card">

            <div class="card-body">
                <div class="table-rep-plugin">
                    <div class="table-responsive mb-0" data-pattern="priority-columns">
                        <table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.MasterContactUsInformationIdesc)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MasterContactUsInformationImageUrl)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.MasterContactUsInformationRedirect)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.MasterContactUsInformationlist)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MasterContactUsInformationIdesc)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MasterContactUsInformationImageUrl)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MasterContactUsInformationRedirect)
                                </td>


                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    <a asp-action="index" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                    <form asp-action="DeleteFullAction" id="deleteForm_@item.Id" method="post" style="display:inline;">
                                        <input type="hidden" name="Id" class="id_@item.Id" value="@item.Id" />
                                        <button type="button" onclick="DeleteConfirmation(@item.Id)" class="btn btn-danger">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>
    </div>
</div>



@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
                    function DeleteConfirmation(id) {
        $('.id_' + id).val(id);

            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    $(`#deleteForm_${id}`).submit();
                }
            });
        }

    </script>
}
